<%- include("partials/header.ejs") %>
<div class="v">
    <div class="container create" style="background-color: #202020; color:aliceblue; margin-top: 20px;">
        <h1>Edit Post</h1>
        <%if(locals.ti && locals.con && locals.in>-1 && locals.end > -1){%>
        <form action="/updated" method="POST">
            <label for="title">Title</label><br>
            <input type="text" id="title"  placeholder="Enter Title" value=<%= locals.ti%> style="width: 99.5%; color: aliceblue;" name="title" autofocus required><br>
            <label for="posttext">Body</label><br>
            <textarea name="body" required><%=locals.con%></textarea><br>
            <input type="hidden" name="index" value=<%=locals.in%>>
            <input type="hidden" name="end" value=<%=locals.end%>>
            <input type="submit" value="submit">
        </form>
        <%}%>
    </div>
</div>
<%- include("partials/footer.ejs") %>